mkcd() {
    mkdir -p "$1" && cd "$1"
}

# cd to zoxide
eval "$(zoxide init zsh --cmd cd)"
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# ls to eza
alias ei="eza --icons --git"
alias ea="eza -la --icons --git"
alias ee="eza -aahl --icons --git"
alias et="eza -T -L 3 -a -I 'node_modules|.git|.cache' --icons"
alias ls=ei
alias la=ea
alias ll=ee

# neovim
alias v=nvim
